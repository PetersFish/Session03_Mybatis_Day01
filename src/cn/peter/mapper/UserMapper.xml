<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--映射接口-->
<mapper namespace="cn.peter.mapper.UserMapper">
  <!--映射接口方法-->
  <select id="save" resultType="java.lang.Integer">
    insert into user (id,username,password) values (#{id},#{username},#{password})
  </select>
  <select id="getUserById" resultType="cn.peter.pojo.User">
    select * from user where id=#{id}
  </select>
  <select id="update" resultType="java.lang.Integer">
    update user set username=#{username}, password=#{password} where id=#{id}
  </select>
  <select id="deleteById" resultType="java.lang.Integer">
    delete from user where id=#{id}
  </select>
</mapper>